<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieList" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/yesil</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowBackground">@color/background</item>
        <item name="cardViewStyle">@style/Theme.MovieList.CardViewTheme</item>
    </style>

    <style name="Theme.MovieList.CardViewTheme" parent="CardView" >
        <item name="cardBackgroundColor">@color/cardview_background_color</item>
        <item name="cardCornerRadius">@dimen/radius</item>
        <item name="cardElevation">5dp</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="textStyle_medium_18_siyah">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/siyah</item>
    </style>

    <style name="textStyle_regular_14_gri">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gri</item>
    </style>

    <style name="textStyle_semibold_12_kirmizi">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/kirmizi</item>
        <item name="android:lineSpacingExtra">-6dp</item>
    </style>

    <style name="textStyle_semibold_16_yesil">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yesil</item>
        <item name="android:lineSpacingExtra">-6dp</item>
    </style>

</resources>